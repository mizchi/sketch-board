.container(style={display: 'flex', width: '100%', height: '100%'})
  .e-container(style={width: '50%'})
    .history
      for h, i in history
        button(onClick=onClickHistory data-history-index=i)=i
    .editor-coffee(ref='coffee', style={width: '100%', height: '100%', paddingBottom: '10'})
    .editor-jade(ref='jade' style={width: '100%', height: '100%'})
    button(onClick=onClickSave) save
    button(onClick=onClickClipboard) clipboard
  .e-container(style={width: '50%', height: '600px'})
    .sandbox(style={width: '100%', height: '100%'})
      .preview(ref='preview')
